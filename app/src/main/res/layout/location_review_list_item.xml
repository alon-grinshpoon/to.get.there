<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="10" >

    <!-- User Photo -->

    <ImageView
        android:id="@+id/img_review_item_user"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/ic_camera" />

    <!-- Review Title and Content -->

    <LinearLayout
        android:id="@+id/left_side_review_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/right_side_review_item"
        android:layout_weight="6"
        android:orientation="vertical" >

        <!-- Review Title -->

        <TextView
            android:id="@+id/review_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <!-- Review Body -->

        <TextView
            android:id="@+id/review_item_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fldkgfjfdlkfjldkfjdlfkjldkjfldkjfldkjfladkja;kljda"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <!-- Review rank bar -->

    </LinearLayout>

    <!-- Like -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="80%" />

</LinearLayout>